{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "paths": {
      "@_source/*": ["./source/*"],
      "@_pw-config": ["./playwright.config.ts"],
      "@_config/*": ["./config/*"],
      "@_logger/*": ["./logger/*"],
      "@api_/*": ["./source/utils/api/*"],
      "*": ["./*"]
    }
  },
  "exclude": ["node_modules", "playwright-report", "test-results"]
}
