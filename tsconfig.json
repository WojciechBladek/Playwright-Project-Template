{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "paths": {
      "@_merge_fixtures_source": ["./source/merge.fixture.ts"],
      "@_pw-config": ["./playwright.config.ts"],
      "@_config/*": ["./config/*"],
      "@_common_source/*": ["./source/common/*"],
      "@_logger/*": ["./logger/*"],
      "@_api_source/*": ["./source/api/*"],
      "@_ui_source/*": ["./source/UI/*"],
      "*": ["./*"]
    }
  },
  "exclude": ["node_modules", "playwright-report", "test-results"]
}
